@page "/Profil";
@using PDSA_System.Shared.Models


<div class="container">
    <h1>Profil</h1>
    <hr />
    <div class="row">
        <EditForm Model="@bruker">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label for="fornavn">Fornavn</label>
                <input type="text" class="form-control" id="fornavn" name="fornavn" @bind-value="@bruker.Fornavn" placeholder="Fornavn" />
            </div>
            <div class="form-group">
                <label for="etternavn">Etternavn</label>
                <input type="text" class="form-control" id="etternavn" name="etternavn" @bind-value="@bruker.Etternavn" placeholder="Etternavn" />
            </div>
            <div class="form-group">
                <label for="epost">Epost</label>
                <input type="text" class="form-control" id="epost" name="epost" @bind-value="@bruker.Email" placeholder="Epost" />

            </div>
            <SubmitInput/>
        </EditForm>       
    </div>
</div>

        
@code {
    Bruker bruker = new Bruker();

}
